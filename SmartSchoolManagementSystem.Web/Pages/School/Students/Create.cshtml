@page
@model SmartSchoolManagementSystem.Web.Pages.School.Students.CreateModel
@{
    ViewData["Title"] = "Add New Student";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0"><i class="fas fa-user-plus"></i> Add New Student</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Student.FirstName" class="control-label">First Name</label>
                                    <input asp-for="Student.FirstName" class="form-control" />
                                    <span asp-validation-for="Student.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Student.LastName" class="control-label">Last Name</label>
                                    <input asp-for="Student.LastName" class="form-control" />
                                    <span asp-validation-for="Student.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Student.DateOfBirth" class="control-label">Date of Birth</label>
                                    <input asp-for="Student.DateOfBirth" class="form-control" type="date" />
                                    <span asp-validation-for="Student.DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Student.Gender" class="control-label">Gender</label>
                                    <select asp-for="Student.Gender" class="form-select">
                                        <option value="">Select Gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Student.Gender" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Student.Email" class="control-label">Email</label>
                                    <input asp-for="Student.Email" class="form-control" type="email" />
                                    <span asp-validation-for="Student.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Student.PhoneNumber" class="control-label">Phone Number</label>
                                    <input asp-for="Student.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="Student.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Student.Address" class="control-label">Address</label>
                                    <textarea asp-for="Student.Address" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Student.Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Student.ClassId" class="control-label">Class</label>
                                    <select asp-for="Student.ClassId" class="form-select" asp-items="Model.ClassList">
                                        <option value="">Select Class</option>
                                    </select>
                                    <span asp-validation-for="Student.ClassId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Student
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
